{
  "manifest_version": 3,
  "name": "Lichess Auto-Join",
  "version": "1.0",
  "description": "Automatically joins upcoming Lichess tournaments.",
  "permissions": ["storage", "notifications", "activeTab"],
  "host_permissions": ["https://lichess.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
